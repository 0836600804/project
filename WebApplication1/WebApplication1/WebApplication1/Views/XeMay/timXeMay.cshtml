@model IEnumerable<WebApplication1.Models.XEMAY>

@{
    ViewBag.Title = "timXeMay";
    Layout = "~/Views/UserLayout.cshtml";
}

<h2>Kết Quả Tìm Được</h2>


<table class="table">
    <tr>
        <th>
            Tên Xe Máy
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Ngày sản xuất
        </th>
        <th>
            Thời gian bảo hành
        </th>
        <th>
            Giá bán
        </th>
        <th>
            Mã Loại xe
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.TENXEMAY)
    </td>
    <td>
        <img src="~/Image/@Html.DisplayFor(modelItem => item.HINHANH)" height="100px" width="130px" />

    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NGAYSANXUAT)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.THOIGIANBAOHANH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GIABANXE)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MALOAIXE)
    </td>



</tr>
    }

</table>
<p style="color: red; font-weight: bold;">Tổng số lượng: @ViewBag.SL</p>