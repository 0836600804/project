<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
</head>
<body>
    <div>
        

        <section class="menu clearfix bg-white">
            @RenderPage("/Views/Share/menu.cshtml")
        </section>



        <section class="slide clearfix bg-white" style="background: #04064f">
            <div class="d-flex justify-content-between container py-2">
                <div>
                    @RenderPage("/Views/Share/slide.cshtml")

                </div>
                @RenderPage("/Views/Share/slideright.cshtml")
            </div>
            <div style="margin-left: 100px;">
                @RenderBody()
            </div>
           

        </section>


        <section class="footer clearfix bg-success">
            @RenderPage("/Views/Share/footer.cshtml")
        </section>


    </div>
</body>
</html>
