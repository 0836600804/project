@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/UserLayout.cshtml";
}
@using WebApplication1.Models;
@model List<GioHang>

<style>
    h3 {
        color: #333;
        margin-bottom: 20px;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
        }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:nth-child(odd) {
        background-color: #fff;
    }

    th {
        background-color: #28a745;
        color: #fff;
    }

    img {
        max-width: 100%;
        height: auto;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .total-row {
        background-color: #f5f5f5;
        font-weight: bold;
        text-align: right;
        color: #333;
    }
</style>

<h3>Thông Tin Giỏ Hàng</h3>
<div class="card">
    <table class="table">
        <thead>
            <tr>
                <th>Mã Xe</th>
                <th>Tên Xe Máy</th>
                <th>Hình Ảnh</th>
                <th>Số Lượng</th>
                <th>Đơn Giá</th>
                <th>Thành Tiền</th>
                <th>Delete Giỏ Hàng</th>
                <th>Update Giỏ Hàng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.imaxemay</td>
                    <td>@item.itenxemay</td>
                    <td><img src="/Image/@item.ihinhanh" alt="Product Image" style="width:100px; height:100px;"></td>
                    @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @ma = item.imaxemay }))
                    {
                        <td><input type="number" min="1" name="txtSoLuong" value="@item.soluong" /></td>
                        <td>@string.Format("{0:0,0}", item.dongia)</td>
                        <td>@string.Format("{0:0,0}", item.thanhtien)</td>
                        <td>@Html.ActionLink("Delete", "XoaGioHang", new { @ma = item.imaxemay })</td>
                        <td><input type="submit" value="Update" class="btn btn-primary" /></td>
                    }
                </tr>
            }
            <tr class="total-row">
                <td colspan="3">Tổng Cộng:</td>
                <td>@ViewBag.TongSoLuong</td>
                <td></td>
                <td>@string.Format("{0:0,0}", ViewBag.TongThanhTien) VND</td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>
